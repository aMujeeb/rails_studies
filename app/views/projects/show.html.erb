<p style="color: green"><%= notice %></p>

<%= render @project %>

<div>
  <%= link_to "Edit this project", edit_project_path(@project) %> |
  <%= link_to "Back to projects", projects_path %>

  <%= button_to "Destroy this project", @project, method: :delete %>

  <hr>
  <h2>Tasks For Project </h2>

  <% @tasks.each do |task| %>
    <p><%= link_to task.title, project_task_path(@project.id, task.id) %></p>
  <% end %>

  <%= link_to "Add a new Task", new_project_task_path(project_id: @project.id) %>
</div>
